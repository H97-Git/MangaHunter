@using MangaHunter.BlazorServer.Common

<MudAppBar Dense="true" Fixed="false">
    <MudLink Href="/" Class="mx-1 logo">
        <MudImage Src="@Src" Width="100"/>
    </MudLink>
    <MudButton Class="mx-1"
               Href="/dashboard"
               IconClass="nav-menu__home--icon"
               StartIcon="@Icons.Material.Rounded.Home"
               Style="line-height: initial">
        Home
    </MudButton>
    <MudButton Class="mx-1"
               Href="search"
               IconClass="nav-menu__search--icon"
               StartIcon="@Icons.Material.Rounded.Search"
               Style="line-height: initial">
        Search
    </MudButton>
    @* <Authorized> *@
    <MudButton Class="mx-1"
               Href="@($"users/{UserState.Username}/mangas")"
               IconClass="nav-menu__mangas--icon"
               StartIcon="@Icons.Material.Rounded.MenuBook"
               Style="line-height: initial">
        Mangas
    </MudButton>
    <MudButton Class="mx-1"
               Href="@($"users/{UserState.Username}/tierlist")"
               IconClass="nav-menu__tierlist--icon"
               StartIcon="@Icons.Material.Rounded.ViewList"
               Style="line-height: initial">
        Tier List
    </MudButton>
    <MudButton Class="mx-1"
               Href="@($"users/{UserState.Username}/Import")"
               IconClass="nav-menu__tierlist--icon"
               StartIcon="@Icons.Material.Rounded.ViewList"
               Style="line-height: initial">
        Import
    </MudButton>
    @* </Authorized> *@
    <MudSpacer/>
    <AccesControl/>
</MudAppBar>

@code{

    [CascadingParameter]
    protected UserState UserState { get; set; }

    [Parameter]
    public bool IsDarkMode { get; set; }

    private string Src => !IsDarkMode ? "logo-dark.png" : "logo-light.png";
}