@using MangaHunter.Contracts.Common
@using MangaHunter.Contracts.Mangadex.Models.Base
@using MangaHunter.Contracts.Mangadex.Models.Manga

<MudStack AlignItems="AlignItems.Center" Row="true">

</MudStack>
<MudCardHeader Style="padding: 8px">
    <CardHeaderAvatar>
        <FlagIcon OriginalLanguage="@MangadexDto.Data.Attributes.OriginalLanguage"/>
    </CardHeaderAvatar>
    <CardHeaderContent>
        <MudTooltip Arrow="true" Placement="Placement.Top" Text="@MangadexDto.Data.Attributes.Title.ToString()">
            <MudText Class="trim" Typo="Typo.h6">
                <MudLink Color="Color.Inherit" Href="@($"manga/{MangadexDto.Data.Id}")">
                    @title
                </MudLink>
            </MudText>
            <MudText Typo="Typo.caption">@MangadexDto.Data.Attributes.PublicationDemographic</MudText>
        </MudTooltip>
    </CardHeaderContent>
    <CardHeaderActions>

    </CardHeaderActions>
</MudCardHeader>

@code {

    [Parameter]
    public MangaDexRoot<Manga> MangadexDto { get; set; }

    private object title => MangadexDto.Data.Attributes.Title;
}