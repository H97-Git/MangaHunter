@using MangaHunter.Contracts.Common
@using MangaHunter.Contracts.Mangadex.Models.Manga
<MudStack AlignItems="AlignItems.Center" Row="true">

</MudStack>
<MudCardHeader Style="padding: 8px">
    <CardHeaderAvatar>
        <FlagIcon OriginalLanguage="@Mangadex.OriginalLanguage"/>
    </CardHeaderAvatar>
    <CardHeaderContent>
        <MudTooltip Arrow="true" Placement="Placement.Top" Text="@Mangadex.Title.EnglishOrDefault">
            <MudText Class="trim" Typo="Typo.h6">
                <MudLink Color="Color.Inherit" Href="@($"manga/{Mangadex.Id}")">
                    @Mangadex.Title.EnglishOrDefault
                </MudLink>
            </MudText>
            <MudText Typo="Typo.caption">@Mangadex.PublicationDemographic</MudText>
        </MudTooltip>
    </CardHeaderContent>
    <CardHeaderActions>

    </CardHeaderActions>
</MudCardHeader>

@code {

    [Parameter]
    public MangadexDto Mangadex { get; set; }

    [Parameter]
    public MangaDto MangadexNewDto { get; set; }
}