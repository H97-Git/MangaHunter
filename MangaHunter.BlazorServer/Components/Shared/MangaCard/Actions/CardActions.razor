@if (!IsReadOnly)
{
    <MudCardActions>
        @if (IsSearchResult)
        {
            <CardTools Add="Add" DeleteUi="OnDeleteUi" HunterResponse="HunterResponseNew" IsSearchResult="IsSearchResult"/>
            <MudSpacer/>
            <IconSites MangadexNew="HunterResponseNew.MangadexDto"/>
        }
        else
        {
            <IconSites MangadexNew="HunterResponseNew.MangadexDto"/>
            <MudSpacer/>
            <CardTools Add="Add" DeleteUi="OnDeleteUi" HunterResponse="HunterResponseNew" IsSearchResult="IsSearchResult"/>
        }
    </MudCardActions>
}
else
{
    <MudCardActions>
        <IconSites MangadexNew="HunterResponseNew.MangadexDto"/>
    </MudCardActions>
}

@code{
    [Parameter]
    public HunterResponseNew HunterResponseNew { get; set; }

    [Parameter]
    public bool IsReadOnly { get; set; }

    [Parameter]
    public bool IsSearchResult { get; set; }
    
    [Parameter]
    public EventCallback<HunterResponseNew> Add { get; set; }

    [Parameter]
    public EventCallback<HunterResponseNew> OnDeleteUi { get; set; }
}