@using MangaHunter.Contracts.Common
@using MangaHunter.Contracts.Mangadex.Models.Base
@using MangaHunter.Contracts.Mangadex.Models.Manga
<MudStack Row="true">
    <IconLink Href="@MangadexUri(MangadexNew.Data.Id)" Src="mangadex.ico"/>
    @if (MangadexNew.Data.Attributes.Links.ToString() is not null)
    {
        <IconLink Href="@MangadexNew.Data.Attributes.Links.ToString()" Src="manga-updates.svg"/>
    }
    @if (MangadexNew.Data.Attributes.Links.ToString() is not null)
    {
        <IconLink Href="@MangadexNew.Data.Attributes.Links.ToString()" Src="anime-planet.ico"/>
    }
</MudStack>

@code {

    [Parameter]
    public MangaDexRoot<Manga> MangadexNew { get; set; }

    private static string MangadexUri(string id) => $"https://mangadex.org/title/{id}";
}